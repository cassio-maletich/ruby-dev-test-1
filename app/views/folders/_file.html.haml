.d-flex.flex-column.position-relative
    - if file.representable?
        = image_tag file.representation(resize_to_limit: [150, 150]), class: "img-fluid"
    - else
        = image_tag image_path("file.svg"), class: "img-fluid"
    = link_to file.filename, rails_blob_path(file, disposition: "attachment"), class: "btn btn-link"
    = link_to "&times;".html_safe, delete_file_path(file.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-file-delete"
